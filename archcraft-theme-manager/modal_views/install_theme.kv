#: import Window kivy.core.window.Window
ModalView:
	background_color:0,0,0,0.4
	RelativeLayout:
		MDFlatButton:
            id:install_button
			md_bg_color:app.theme_cls.primary_color
			text:"Install"	
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.7,"center_y":0.15}
			radius:dp(10)
			font_name:app.regular_font
	        ripple_scale:0
            on_touch_down:app.install_theme(self.url,self.name) if self.text == "Install" else app.send_notification("{} already installed".format(theme_name.text))
            disabled:True if self.text != "Install" else False
		MDFlatButton:
			md_bg_color:0,0,0,0
			line_color:app.theme_cls.primary_color
			text:"Cancel" 
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.3,"center_y":0.15}
			radius:dp(10)
			font_name:app.regular_font
			line_width:dp(1)
	        ripple_scale:0
	        on_press:root.dismiss()
        AsyncImage:
            id:image
            size_hint:1,0.5
            pos_hint:{"top":1}
        ScrollView:
            pos_hint:{"center_y":0.35}
            size_hint:1,0.3
            MDBoxLayout:
                adaptive_height:True
                orientation:"vertical"
                padding:dp(20)
                spacing:dp(10)
                MDLabel:
                    markup:True
			        id:theme_name
                    size_hint:None,None
                    size:Window.size[0],dp(20)
			        text:"Dark"
			        font_name:app.bold_font
			        font_size:"25sp"
		        MDLabel:
                    markup:True
                    id:dev_name
			        text:"by Ansh Dadwal"
			        font_name:app.medium_font
			        font_size:"15sp"
                    size_hint:None,None
                    size:Window.size[0],dp(20)
			    MDLabel:
                    markup:True
			        id:file_size
			        text:"20mb"
			        font_name:app.medium_font
			        font_size:"15sp"
                    size_hint:None,None
                    size:Window.size[0],dp(20)
			    MDLabel:
                    markup:True
			        id:theme_wm
			        text:"Openbox"
			        font_name:app.medium_font
			        font_size:"15sp"
                    size_hint:None,None
                    size:Window.size[0],dp(20)

