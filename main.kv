#:import Clock kivy.clock.Clock
<ThemeView>:
    source:""
    text:""
    type:"openbox"
    size_hint_y:None
    size:dp(50),dp(180)
    MDCard:
        size_hint:0.8,None
        size:dp(50),dp(180)
        radius:dp(10)
    FitImage:
        size_hint:0.8,None
        size:dp(50),dp(180)
        radius:dp(10)
        source:root.source
    FitImage:
        size_hint:0.8,None
        size:dp(50),dp(180)
        radius:dp(10)
        source:"./assets/shadow-black-down.png"
    RelativeLayout:
        MDLabel:
            pos_hint:{"center_y":0.12,"center_x":0.5}
            text:root.text
            halign:"center"
            font_name:app.regular_font
            theme_text_color:"Custom"
            text_color:1,1,1,1
        MDIconButton:
            id:is_current
            icon:"check"
            pos_hint:{"center_y":0.12,"center_x":0.8}
            opacity:0
            ripple_scale:0
            theme_icon_color:"Custom"
            icon_color:app.theme_cls.accent_color

    MDCard:
        size_hint:0.8,None
        size:dp(50),dp(183)
        radius:dp(10)
        md_bg_color:0,0,0,0
        on_press:app.apply_theme_openbox(root.text.lower()) if root.type == "openbox" else app.apply_theme_bspwm(root.text.lower()) 
    

<ThemeViewOnline>:
    size_hint:1,None
    size:dp(50),dp(180)
    source:""
    text:""
    installed:False
    FitImage:
        size_hint:0.85,None
        size:dp(50),dp(180)
        radius:dp(10)
        source:root.source
    FitImage:
        size_hint:0.85,None
        size:dp(50),dp(180)
        radius:dp(10)
        source:"./assets/shadow-black-down.png"
    RelativeLayout:
        MDLabel:
            pos_hint:{"center_y":0.12,"center_x":0.4}
            text:root.text
            halign:"center"
            font_name:app.regular_font
            theme_text_color:"Custom"
            text_color:1,1,1,1

        MDIconButton:
            icon:"check"
            opacity:0 if root.installed == False else 1
            pos_hint:{"center_y":0.12,"center_x":0.75}
        MDIconButton:
            icon:"download"
            pos_hint:{"center_y":0.12,"center_x":0.85}
            on_press:app.open_theme_installer(root)

MDBottomNavigation:
    font_name:app.medium_font
    #radius:dp(10)
    selected_color_background:app.theme_cls.bg_normal[:-1] + [0.5]
    panel_color:app.theme_cls.custom_light
    MDBottomNavigationItem:
        name:"online"
        md_bg_color:app.theme_cls.custom_normal
        icon:"earth"
        text:"Online Themes"
        id:ScreenOnline
        MDLabel:
            text:"Hi, {}".format(app.name_linux)
            font_name:app.bold_font
            pos_hint:{"center_x":0.53,"center_y":0.95}
            font_size:"35sp"
            theme_text_color:"Custom"
            text_color:app.theme_cls.opposite_bg_light
        M_CardTextField:
            text:""
            hint_text:"Search Themes"
            size_hint_x:0.95
            pos_hint:{"center_x":0.5,"center_y":0.85}
            icon_left:"magnify"
            radius:[dp(5) for i in range(4)]
            font_name:app.medium_font
            on_focus:app.open_search_box()
            on_text:Clock.schedule_once(lambda arg :app.handle_search(text=self.text,search=True))
            md_bg_color:app.theme_cls.opposite_bg_light
            background_color:self.md_bg_color
            foreground_color:app.theme_cls.bg_light
            theme_icon_color:"Custom"
            icon_left_color:app.theme_cls.bg_light
            text_color:self.icon_left_color
            theme_text_color:"Custom"
            
        AnchorLayout:
            anchor_y:"bottom"
            MDScrollViewRefreshLayout:
                id:refresh_layout_online
                root_layout: ScreenOnline
                size_hint_y:0.8
                refresh_callback:app.refresh_online
                MDBoxLayout:
                    id:online_theme_lower
                    adaptive_height:True
                    padding:dp(10)
                    orientation:"vertical"
                    spacing:dp(30)
                    MDLabel:
                    MDLabel:
                        text:"Popular"
                        font_name:app.medium_font
                        font_size:"15sp"
                        theme_text_color:"Custom"
                        text_color:app.theme_cls.opposite_bg_light
                    RelativeLayout:
                        size_hint_y:None
                        size:dp(10),dp(200)
                        Carousel:
                            direction:"right"
                            id:online_theme_top

                        MDIconButton:
                            icon:"chevron-right"
                            pos_hint:{"center_x":0.98,"center_y":0.5}
                            on_press:online_theme_top.load_next(mode='next')
                        MDIconButton:
                            icon:"chevron-left"
                            pos_hint:{"center_x":0.02,"center_y":0.5}
                            on_press:online_theme_top.load_previous()

                    MDLabel:
                        text:"Online Themes"
                        font_name:app.medium_font
                        font_size:"15sp"
                        theme_text_color:"Custom"
                        text_color:app.theme_cls.opposite_bg_light

        MDAnchorLayout:
            id:search_box
            size_hint:1,0.8
            radius:[0] * 4#[dp(20),dp(20),0,0]
            md_bg_color:app.theme_cls.bg_dark
            pos_hint:{"center_y":-1}
            RecycleView:
                id:search_view
                size_hint:0.95,1
                key_viewclass: 'viewclass'
                key_size: 'height'
                RecycleBoxLayout:
                    orientation:"vertical"
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_x:1
                    size_hint_y: None
                    height: self.minimum_height
                    #padding:dp(10)
                    spacing:dp(10)

        
    MDBottomNavigationItem:
        name:"main"
        text:"My Themes"
        md_bg_color:app.theme_cls.bg_normal
        icon:"account"
        id:ScreenOffline
        MDTabs:
            font_name:app.medium_font
            allow_stretch:True
            tab_indicator_anim:True
            Tab:
                title:"Openbox"
                AnchorLayout:
                    anchor_y:"bottom"
                    MDLabel:
                        id:load_label
                        text:"Applying ..."
                        font_name:app.medium_font
                        font_size:"30sp"
                        halign:"center"
                        opacity:0
                    MDScrollViewRefreshLayout:
                        root_layout: ScreenOffline
                        size_hint_y:1
                        refresh_callback:app.refresh_offline_openbox
                        id:openbox_scrollview
                        MDBoxLayout:
                            md_bg_color:app.theme_cls.bg_normal
                            id:local_themes
                            adaptive_height:True
                            padding:dp(10)
                            orientation:"vertical"
                            spacing:dp(30)
            Tab:
                title:"Bspwm"
                font_name:app.medium_font
                AnchorLayout:
                    anchor_y:"bottom"
                    MDLabel:
                        id:load_label_bspwm
                        text:"Applying ..."
                        font_name:app.medium_font
                        font_size:"30sp"
                        halign:"center"
                        opacity:0
                    MDScrollViewRefreshLayout:
                        root_layout: ScreenOffline
                        size_hint_y:1
                        refresh_callback:app.refresh_offline_bspwm
                        id:bspwm_scrollview
                        MDBoxLayout:
                            md_bg_color:app.theme_cls.bg_normal
                            id:local_themes_bspwm
                            adaptive_height:True
                            padding:dp(10)
                            orientation:"vertical"
                            spacing:dp(30)
