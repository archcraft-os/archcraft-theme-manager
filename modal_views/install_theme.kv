ModalView:
	background_color:0,0,0,0.4
	RelativeLayout:
		MDFlatButton:
            id:install_button
			md_bg_color:app.theme_cls.primary_color
			text:"Install"	
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.7,"center_y":0.2}
			radius:dp(10)
			font_name:app.regular_font
	        ripple_scale:0
            on_touch_down:app.install_theme(self.url,self.name) if self.text == "Install" else app.send_notification("{} already installed")
            disabled:True if self.text != "Install" else False
		MDFlatButton:
			md_bg_color:0,0,0,0
			line_color:app.theme_cls.primary_color
			text:"Cancel" 
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.3,"center_y":0.2}
			radius:dp(10)
			font_name:app.regular_font
			line_width:dp(1)
	        ripple_scale:0
	        on_press:root.dismiss()
        AsyncImage:
            id:image
            size_hint:1,0.5
            source:"./default_previews/easy.png"
            pos_hint:{"center_y":0.7}
        MDLabel:
			id:theme_name
			text:"Dark"
			font_name:app.bold_font
			font_size:"25sp"
			halign:"center"
			pos_hint:{"center_x":0.5,"center_y":0.4}
		MDLabel:
			id:dev_name
			text:"by Ansh Dadwal"
			font_name:app.regular_font
			font_size:"20sp"
			halign:"center"
			pos_hint:{"center_x":0.5,"center_y":0.35}
		MDLabel:
			id:file_size
			text:"20mb"
			font_name:app.medium_font
			font_size:"20sp"
			halign:"center"
			pos_hint:{"center_x":0.85,"center_y":0.4}


