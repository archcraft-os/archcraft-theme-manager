ModalView:
	background_color:0,0,0,0.4
	RelativeLayout:
		MDFlatButton:
			md_bg_color:app.theme_cls.primary_dark
			text:"Install"	
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.7,"center_y":0.2}
			radius:dp(10)
			font_name:app.regular_font
	        ripple_scale:0
		MDFlatButton:
			md_bg_color:0,0,0,0
			line_color:app.theme_cls.primary_light
			text:"Cancel" 
			size_hint:0.3,0.07
			pos_hint:{"center_x":0.3,"center_y":0.2}
			radius:dp(10)
			font_name:app.regular_font
			line_width:dp(1)
	        ripple_scale:0
	        on_press:root.close()
		MDLabel:
			id:theme_name
			text:"Dark"
			font_name:app.bold_font
			font_size:"25sp"
			halign:"center"
			pos_hint:{"center_x":0.5,"center_y":0.4}
		MDLabel:
			id:dev_name
			text:"by Ansh Dadwal"
			font_name:app.regular_font
			font_size:"20sp"
			halign:"center"
			pos_hint:{"center_x":0.5,"center_y":0.35}

